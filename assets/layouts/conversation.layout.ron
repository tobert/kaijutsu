// Conversation view layout
//
// The main view for chat/shell interaction with the kernel.
//
// NOTE: This layout only includes panels that have been migrated to the
// layout system. Other UI elements (ConstellationMini) are still spawned
// by their respective systems.
//
// Structure:
// ┌────────────────────────────────────────────────────────┐
// │                     Content Area                       │
// │  ┌────────────────────────────────────────────────┐   │
// │  │                  DagView                       │   │
// │  │              (scrollable blocks)               │   │
// │  └────────────────────────────────────────────────┘   │
// └────────────────────────────────────────────────────────┘
(
    name: "conversation",
    root: Container(
        direction: Column,
        children: [
            // Main content area - DAG view for conversation blocks
            Panel(id: "DagView", flex: 1.0),
            // Compose block - inline editable input at bottom of conversation
            // Replaces the floating prompt with an inline block
            Panel(id: "ComposeBlock", flex: 0.0),
        ],
        flex: 1.0,
    ),
)
