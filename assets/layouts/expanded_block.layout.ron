// Expanded block view layout
//
// Full-screen overlay for viewing and editing a single block.
// Pushed onto ViewStack when expanding a block from conversation.
//
// Structure:
// ┌────────────────────────────────────────────────────────┐
// │                  Expanded Block View                   │
// │  ┌──────────────────────────────────────────────────┐ │
// │  │                                                  │ │
// │  │           ExpandedBlockEditor                    │ │
// │  │           (full-height editor)                   │ │
// │  │                                                  │ │
// │  └──────────────────────────────────────────────────┘ │
// └────────────────────────────────────────────────────────┘
(
    name: "expanded_block",
    root: Container(
        direction: Column,
        children: [
            Panel(id: "ExpandedBlockEditor", flex: 1.0),
        ],
        flex: 1.0,
    ),
)
