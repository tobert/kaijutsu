{
  "_comment": "Sample Claude Code hook configuration for kaijutsu integration. Copy the 'hooks' section into your .claude/settings.json.",
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "contrib/adapters/claude.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "contrib/adapters/claude.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "contrib/adapters/claude.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "contrib/adapters/claude.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "contrib/adapters/claude.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
