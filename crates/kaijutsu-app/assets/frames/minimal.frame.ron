// Minimal frame style - subtle corners, no edges
// Used for output cells and system messages
(
    name: "minimal",

    // Smaller, more subtle sizing
    corner_size: 32.0,
    edge_thickness: 0.0,  // No edges
    content_padding: 4.0,

    // Corner shader - same design but smaller
    corner: (
        path: "shaders/corner.wgsl",
        color: (0.4, 0.4, 0.5, 0.7),  // Gray/neutral
        params: (0.1, 0.6, 0.8, 0.5),  // Subtle glow, slow pulse, shorter brackets (50%)
    ),

    // No edges - corners meet directly
    edge_h: None,
    edge_v: None,

    animation: Synced,

    states: {
        "focused": (
            color: Some((0.5, 0.5, 0.6, 0.9)),
            params: Some((0.12, 0.8, 1.0, 0.5)),
            intensity: 1.0,
        ),
        "unfocused": (
            color: Some((0.35, 0.35, 0.4, 0.5)),
            params: Some((0.08, 0.4, 0.5, 0.5)),
            intensity: 0.5,
        ),
    },
)
